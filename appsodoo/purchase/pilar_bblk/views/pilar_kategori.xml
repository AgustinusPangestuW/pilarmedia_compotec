<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="pilar_categ_reagen_tree">
            <field name="name">pilar.categ.reagen.tree</field>
            <field name="model">pilar.categ.reagen</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="deskripsi"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="pilar_categ_reagen_form">
            <field name="name">pilar.categ.reagen.form</field>
            <field name="model">pilar.categ.reagen</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="deskripsi"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pilar_categ_reagen_action">
            <field name="name">Kategori</field>
            <field name="res_model">pilar.categ.reagen</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>