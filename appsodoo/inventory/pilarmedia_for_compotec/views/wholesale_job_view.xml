<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="wholesale_job_tree">
            <field name="name">wholesale.job.tree</field>
            <field name="model">wholesale.job</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="job_ids"/>
                    <field name="lot_lines"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="wholesale_job_form">
            <field name="name">wholesale.job.form</field>
            <field name="model">wholesale.job</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="job_ids"/>
                                <field name="checked_coordinator"/>
                                <field name="checked_qc"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Lot">
                                <field name="lot_lines" context="{'job_id': job_ids}" attrs="{'readonly': [('job_ids', '=', False)]}">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="job_ids"/>
                                        <field name="product_ids"/>
                                        <field name="user_ids"/>
                                        <field name="total_lot"/>
                                        <field name="wholesale_job_lot_lines"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="wholesale_job_action">
            <field name="name">Check Sheet Hasil Borongan</field>
            <field name="res_model">wholesale.job</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="main_wholesale_job" name="Check Sheet Hasil Borongan" parent="compotec_root_menu" action="wholesale_job_action"/>

        <menuitem id="report_conpotec_menu_root" name="Report" parent="compotec_root_menu"/>

    </data>
</odoo>