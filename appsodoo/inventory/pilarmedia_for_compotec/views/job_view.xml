<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="job_tree">
            <field name="name">job.tree</field>
            <field name="model">job</field>
            <field name="domain">[("active", "=", True)]</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <!-- Form View -->
        <record model="ir.ui.view" id="job_form">
            <field name="name">job.form</field>
            <field name="model">job</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="job_action">
            <field name="name">Job</field>
            <field name="res_model">job</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem 
            id="main_job"
            name="Job"
        />

        <menuitem 
            id="menu_job"
            name="Job"
            parent="main_job"
        />

        <menuitem 
            id="submenu_job"
            name="Job"
            parent="menu_job"

            action="job_action"
        />

    </data>
</odoo>