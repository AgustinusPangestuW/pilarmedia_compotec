<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="wholesale_job_id" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='extra']" position="before">
                <page string="Remaining Qty base on Surat Jalan" attrs="{'invisible': [('surat_jalan_id', '=', False)]}">
                    <field name="log_outstanding_qty_line">
                        <tree>
                            <field name="product_id"/>
                            <field name="qty_base_on_sj_master"/>
                            <field name="done_qty"/>
                            <field name="remaining_qty"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']" position="after">
                <div class="oe_title" attrs="{'invisible': [('surat_jalan_id', '=', False)]}">
                    <h3>Pricelist Subcont</h3>
                </div>
                <field name="pricelist_subcons" attrs="{'invisible': [('surat_jalan_id', '=', False)]}">
                    <tree create="0" delete="0">
                        <field name="product_id"/>
                        <field name="price_total"/>
                    </tree>
                    <form string="Pricelist Subcons">
                        <group>
                            <field name="product_id"/>
                            <field name="vendor" invisible="1"/>
                        </group>
                        <group>
                            <field name="price_total"/>
                        </group>
                        <notebook>
                            <page string="Pricelist Subcon">
                                <field name="lines">
                                    <tree editable="bottom">
                                        <field name="pricelist_id" domain="[('partner_id', '=', parent.vendor)]"/>
                                        <field name="price"/>
                                        <field name="qty"/>
                                        <field name="price_total"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </form>
                </field>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_type_kanban_inherit" model="ir.ui.view">
        <field name="name">stock.picking.type.kanban.inherit</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban" />
        <field name="arch" type="xml">
            <xpath expr="/kanban/templates/t/div/div/div[3]/div/div[2]/div[2]" position="replace">
                <!-- remove button transfer immediate -->
            </xpath>
        </field>
    </record>
</odoo>