<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="inherit_stock_picking_type_form">
            <field name="name">inherit.stock.picking.type.form</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warehouse_id']" position="after">
                    <field name="approvals" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>

        <record id="stock_picking_type_kanban_inherit" model="ir.ui.view">
            <field name="name">stock.picking.type.kanban.inherit</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.stock_picking_type_kanban" />
            <field name="arch" type="xml">
                <xpath expr="/kanban/templates/t/div/div/div[2]/div/div[2]/div" position="after">
                    <div t-if="record.count_picking_rejected.raw_value > 0" class="row">
                        <div class="col-9">
                            <a class="oe_kanban_stock_picking_type_list" name="get_action_picking_tree_rejected" type="object">
                                Rejected
                            </a>
                        </div>
                        <div class="col-3">
                            <field name="count_picking_rejected"/>
                        </div>
                    </div>
                    <div t-if="record.count_picking_approved.raw_value > 0" class="row">
                        <div class="col-9">
                            <a class="oe_kanban_stock_picking_type_list" name="get_action_picking_tree_approved" type="object">
                                Approved
                            </a>
                        </div>
                        <div class="col-3">
                            <field name="count_picking_approved"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="inherit_view_picking_internal_search">
            <field name="name">stock.picking.internal.search.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='backorder']" position="after">
                    <filter name="rejected" string="Rejected" 
                        domain="[('state', '=', 'reject')]"/>
                    <filter name="approved" string="Approved" 
                        domain="[('approved_by', '!=', False), ('state', '=', 'done')]"/>
                </xpath>
            </field>
        </record>

        <record id="action_picking_tree_rejected" model="ir.actions.act_window">
            <field name="name">Rejected Transfers</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain"></field>
            <field name="context">{'contact_display': 'partner_address', 'search_default_rejected': 1}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transfer
                </p><p>
                    Transfers allow you to move products from one location to another.
                </p>
            </field>
        </record>

        <record id="action_picking_tree_approved" model="ir.actions.act_window">
            <field name="name">Approved Transfers</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain"></field>
            <field name="context">{'contact_display': 'partner_address', 'search_default_approved': 1}</field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transfer
                </p><p>
                    Transfers allow you to move products from one location to another.
                </p>
            </field>
        </record>
    </data>
</odoo>